stats "M.dat" skip 1
set title "Magnetisation"
set ylabel "<|M|>/L^2"
set key bottom left
plot for[i=6:STATS_columns] "M.dat" u 1:i w l lw 2

stats "chi.dat" skip 1
set title "Magnetic susceptibility"
set ylabel "Ï‡/L^2"
set key top left
plot for[i=6:STATS_columns] "chi.dat" u 1:i w l lw 2

unset multiplot
