set xlabel "T"
set key autotitle columnheader

set multiplot layout 4, 1

stats "E.dat" skip 1
set title "Energy"
plot for[i=2:3] "E.dat" u 1:i w l lw 2

stats "CV.dat" skip 1
set title "Heat capacity"
plot for[i=2:3] "CV.dat" u 1:i w l lw 2

stats "M.dat" skip 1
set title "Magnetisation"
plot for[i=2:3] "M.dat" u 1:i w l lw 2

stats "chi.dat" skip 1
set title "Magnetic susceptibility"
plot for[i=2:3] "chi.dat" u 1:i w l lw 2

unset multiplot
pause -1
