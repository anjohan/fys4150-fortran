set terminal svg size 600,1000
set output "fig.svg"
set xlabel "T"
set key autotitle columnheader

set multiplot layout 3,1

set xtics 0.05

stats "E.dat" skip 1
set title "Energy"
set ylabel "<E>/L^2"
set key top left
plot for[i=6:STATS_columns] "E.dat" u 1:i w l lw 2

